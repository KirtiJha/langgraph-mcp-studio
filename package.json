{
  "name": "mcp-studio",
  "version": "1.0.0",
  "description": "MCP Studio - Your Model Context Protocol Command Center",
  "main": "dist/main/main/index.js",
  "scripts": {
    "start": "electron dist/main/main/index.js",
    "dev": "npm run build:main && concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "electron dist/main/main/index.js",
    "dev:renderer": "vite",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win"
  },
  "build": {
    "appId": "com.mcpstudio.app",
    "productName": "MCP Studio",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@ibm-cloud/watsonx-ai": "^1.4.3",
    "@langchain/community": "^0.3.46",
    "@langchain/core": "^0.3.58",
    "@langchain/langgraph": "^0.3.3",
    "@modelcontextprotocol/sdk": "^1.12.3",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "electron-store": "^10.0.1",
    "framer-motion": "^12.18.1",
    "langchain": "^0.3.28",
    "lucide-react": "^0.515.0",
    "tailwindcss": "^3.4.17",
    "uuid": "^11.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@emotion/react": "^11.13.5",
    "@emotion/styled": "^11.13.5",
    "@mui/icons-material": "^7.1.1",
    "@mui/material": "^7.1.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^24.0.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.7.2",
    "vite": "^6.3.5"
  }
}
